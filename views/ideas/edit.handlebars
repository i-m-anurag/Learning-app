

<div class="card card--body">
    <h3>Edit Video Ideas</h3>
    <form action="/ideas/{{idea.id}}?_method=PUT" method="POST">
    <input type = "hidden" name = "_method" value = "PUT">
        <div class="form-group">
            <lable for="title">Title</lable>
            <input type="text" class="form-control" name="title" value = "{{idea.title}}" required>
        </div>
        <div class="form-group">
            <lable for="details">Details</lable>
            <textarea class="form-control" name="details" >{{idea.details}}</textarea required>
            </div>
            <button type = "submit" class = "btn btn-primary">Submit</button>
    </form>


</div>